extends layout

block content
  .container
    .row
      .col-md-6.col-md-offset-3.text-center
        .panel.panel-default
          .panel-body
            h2 We'd love to hear from you!
            p The focus is you, so tell us what you think.
            form.form(action=baseurl+'feedback', method='post')
              .form-group
                input.form-control(type='text', name='name', placeholder='Name', required)
              .form-group
                input.form-control(type='email', name='email', placeholder='Email Address', required)
              .form-group
                textarea.form-control(name='content', placeholder='What do you want to say about Appointer?')
              .center-block
                .g-recaptcha.form-group(data-sitekey='6LfwugYTAAAAAIS1gHu2H_9wGiEb6ind8_yh3mir')
              .form-group
                input.form-control.btn.btn-primary(type='submit', value='Submit Feedback')

block js
  script(src='https://www.google.com/recaptcha/api.js')